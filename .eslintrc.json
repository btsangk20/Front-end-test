{
    "extends": [
        "eslint:recommended",
        "plugin:import/errors",
        "plugin:react/recommended",
        "plugin:jsx-a11y/recommended",
        "prettier"
    ],

    "plugins": ["react", "jsx-a11y", "import"],
    "relust": {
        "react/prop-types": 0,
        "react/react-in-jsx-scope": 0
    },

    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },

    "settings": {
        "react": {
            "version": "detect"
        }
    }
}